#include <stdio.h>

int main()
{
    int arr[100], n;
    int i, min, position;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
    min = arr[0];
    position = 0;

    for(i = 1; i < n; i++)
    {
        if(arr[i] < min)
        {
            min = arr[i];
            position = i;
        }
    }

    printf("Smallest number = %d\n", min);
    printf("Position = %d\n", position + 1);  
    return 0;
}
